{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "assets": [
            {
                "include": "../client/dist/**/*",
                "outDir": "dist/client/dist"
            },
            {
                "include": "**/*.sql",
                "outDir": "./dist"
            }
        ],
        "deleteOutDir": true
    }
}